.tab-bar{position:relative;height:110rpx;width:750rpx;background:#fff;display:flex;flex-direction:row;background-position:center center;background-size:100% 100%;padding-bottom:env(safe-area-inset-bottom)}.tab-bar-bottom{position:fixed!important;bottom:0;left:0;right:0}.tab-bar-border{position:absolute;left:0;top:0;width:100%;display:flex;flex-direction:row;height:1rpx;background:#f6f6f6;box-shadow:0 -1px 3px 1px #f6f6f6}.tab-bar-item{position:relative;flex:1;text-align:center;display:flex;justify-content:center;align-items:center;flex-direction:column}.item-circle{width:120rpx;height:60rpx;background-color:#fff;border-radius:200rpx 200rpx 0 0;border-bottom:none;background:#fff;position:absolute;top:-40rpx;box-shadow:0 -1px 1px 0 #f6f6f6}.tab-bar-item-image{width:calc(64rpx + 0.5 * (1rem - 16px));height:calc(64rpx + 0.5 * (1rem - 16px))}.tab-bar-item view{font-size:calc(24rpx + 0.5 * (1rem - 16px))}.reddot{height:20rpx;width:20rpx;background:red;border-radius:50%;position:absolute;top:15rpx;margin-left:25rpx}.badge{height:calc(32rpx + 0.5 * (1rem - 16px));line-height:calc(32rpx + 0.5 * (1rem - 16px));padding:0rpx 6rpx;background:red;border-radius:16rpx;position:absolute;font-size:calc(18rpx + 0.5 * (1rem - 16px));color:#fff;top:10rpx;margin-left:25rpx;box-sizing:border-box}.center-circle{height:calc(100rpx + 0.5 * (1rem - 16px));width:calc(100rpx + 0.5 * (1rem - 16px));border-radius:50%;position:absolute;top:-30rpx}