<!--index.wxml-->
<view class ="container">
<view class ='userInfo'>
<block wx:if="{{!hasUserInfo}}">
  <image wx:if="{{canIUseGetUserProfile}}" src="/ui/小告示.png" class="img"></image>
<button wx:if="{{canIUseGetUserProfile}}" bindtap="getUserProfile" class="btn1"> 登入 </button>
<button wx:else class='btn1' open-type="getUserInfo" bindgetuserinfo="getUserInfo">登入</button>
</block>
<block wx:else class="loginafter">
<image bindtap="bindViewTap" src="{{userInfo.avatarUrl}}" mode="cover" class="userinfo-avartar"></image>
<button class="btn1" bindtap="switchpage">首页</button>
</block>
</view>
</view>